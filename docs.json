{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "ZephyrDB - Documentation",
  "colors": {
    "primary": "#5E6AD2",
    "light": "#5E6AD2",
    "dark": "#222326"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "overview",
              "quickstart"
